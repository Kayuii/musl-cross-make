@@ -197,9 +197,7 @@ macro(test_targets)
       cmake_pop_check_state()
 
       if(HOST_IS_BIG_ENDIAN)
-        if(CMAKE_SYSTEM_NAME MATCHES "AIX")
           test_target_arch(powerpc "" "-m32")
-        endif()
           test_target_arch(powerpc64 "" "-m64")
       else()
         test_target_arch(powerpc64le "" "-m64")
